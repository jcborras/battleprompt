echo "Sourcing battleprompt"

function git_prompt {
    filesdir=$HOME/src/git-trees/battleprompt
    if [ -f $filesdir/term_colors ] && [ -f $filesdir/git_prompt ] ; then
        . $filesdir/term_colors
        . $filesdir/git_prompt
    fi
    unset filedir
}

function regular_prompt {
    PS1="$Green venv:$(a=`echo $VIRTUAL_ENV |rev|cut -f1 -d/ | rev` ; [ -n "$a" ] && echo $a\  )"\
"${debian_chroot:+($debian_chroot)}$BGreen\u@\h\[\033[00m\]:$BBlue\w$BWhite \$$ColorOff "
}
